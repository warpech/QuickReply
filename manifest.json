{
  "manifest_version": 2,
  "name": "Quick Reply for GitHub",
  "version": "1.0",

  "description": "Adds a \"Quick Reply\" button to GitHub.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["content_scripts/content.js"]
    }
  ]

}
