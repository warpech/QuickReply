{
  "manifest_version": 2,
  "name": "Quick Reply for GitHub",
  "version": "1.0",

  "description": "Adds a \"Quick Reply\" button to GitHub issues and PRs.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["content_scripts/content.js"]
    }
  ]

}
